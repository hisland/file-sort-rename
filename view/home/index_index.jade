doctype html
html
  head
    meta(charset="utf-8")
  body(ng-controller="show")
    .path
      a(ng-repeat="v in path" href="?path={{v.url}}") {{v.name}}/

    .btns
      span 保存

    .list
      .item
        span.a 拖动
        span.b: input(type="checkbox")
        span.c 原名
        span.d 新名
      .item(ng-repeat="v in list")
        span.a  
        span.b: input(type="checkbox")
        a.c(ng-if="v.url" href="?path={{v.url}}") {{v.name}}
        span.c(ng-if="!v.url" ) {{v.name}}
        span.d {{v.newName}}

    script.
      path = !{path};
      list = !{list};
    script(src="/static/dist/vendor.js")
    script(src="/static/dist/main.js")
