doctype html
html
  head
    meta(charset="utf-8")
  body(ng-controller="show")
    .path
      a(ng-repeat="v in path.sep" href="?path={{v.url}}") {{v.name}}/

    .btns
      span.btn(ng-click="save()") 保存

    .list
      .head
        .item
          span.a
          span.b: input(type="checkbox" ng-model="check_all" ng-change="checkAll()")
          span.c 原名
          span.d 新名
      .body(ng-sortable="sortConfig")
        .item(ng-repeat="v in list")
          span.a.move
          span.b: input(type="checkbox" ng-model="v.checked" ng-change="change()")

          span.c(ng-if="v.url"): a(href="?path={{v.url}}") {{v.name}}
          span.c(ng-if="!v.url" ) {{v.name}}

          span.d(ng-if="v.checked" ) {{v.newName}}

    script.
      path = !{path};
      list = !{list};
    script(src="/static/dist/vendor.js")
    script(src="/static/dist/main.js")
